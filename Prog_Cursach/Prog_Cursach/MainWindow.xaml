        <TextBox x:Name="textBoxMin" HorizontalAlignment="Left" Height="23" Margin="34,205,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181" FontFamily="Century Gothic"/>
        <Button x:Name="buttonStart" Content="Заповнити значення" HorizontalAlignment="Left" Margin="34,251,0,0" VerticalAlignment="Top" Width="181" Height="40" Click="buttonStart_Click" Background="{x:Null}" FontFamily="Century Gothic"/>
        <Label x:Name="label_Finish" Content="Сортування виконано" HorizontalAlignment="Left" Margin="328,23,0,0" VerticalAlignment="Top" Width="161" Visibility="Hidden" FontFamily="Century Gothic"/>

    </Grid>
</Window>
